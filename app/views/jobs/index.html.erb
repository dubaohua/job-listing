<div class="pull-right">
  <%= link_to("Add a job",new_job_path, :class => "btn btn-default") %>
</div>
<div class="dropdown clearfix pull-right">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    排序
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
    <li><%= link_to("按照薪资下限排序",jobs_path(:order => "by_lower_bound")) %></li>
    <li><%= link_to("按照薪资上限排序",jobs_path(order: "by_upper_bound")) %></li>
    <li><%= link_to("按照发表时间排序",jobs_path) %></li>
    
  </ul>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <td>招聘职位</td>
      <td>薪资范围</td>
      <td>职位发布时间</td>
      <td>最后更新时间</td>
      <td>该职位已申请人数</td>

    </tr>
  </thead>
  <tbody>
  <% @jobs.each do |job| %>
    <tr>
      <td><%= link_to(job.title,job_path(job)) %></td>
      <td>
        <%= job.wage_lower_bound %>---<span style="color:red"><%= job.wage_upper_bound %></span>
      </td>
      <td>
        <%= job.created_at.strftime("%Y-%m-%d") %>
      </td>
      <td><%= job.updated_at.strftime("%Y-%m-%d") %></td>
      <td>
        <%= job.resumes.count %>
        <%= link_to("查看详情", job_path(job), :style => "margin-left: 32px;font-size: 14px; text-decoration:underline;") %>
        <%= link_to("投简历", new_job_resume_path(job), :style => "margin-left:12px;font-size: 14px; text-decoration:underline;") %>
      </td>

    </tr>
  <% end %>
  <tbody>
</table>
