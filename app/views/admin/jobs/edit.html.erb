<h1>Edit a job</h1>
<%= simple_form_for [:admin,@job] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :wage_lower_bound, :label => "薪资下限" %>
  <%= f.input :wage_upper_bound, label: "薪资上限" %>
  <%= f.input :work_address, label: "工作地点" %>
  <%= f.input :work_zhize, label: "岗位职责" %>
  <%= f.input :work_yaoqiu, label: "任职要求" %>
  <%= f.input :need_quantity, label: "招工人数" %>
  <%= f.input :company_name, label: "公司名称" %>
  <%= f.input :company_info, label: "公司信息" %>
  <%= f.input :contact_email %>
  <%= f.input :is_hidden %>
  <%= f.submit "Submit" %>
<% end %>
